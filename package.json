{
    "name": "gtk-dark-titlebar",
    "version": "1.0.0",
    "publisher": "fkrull",
    "license": "BSD-2-Clause",
    "engines": {
        "vscode": "^1.16.0"
    },
    "main": "./extension",
    "activationEvents": [
        "*"
    ],
    "contributes": {
        "configuration": {
            "title": "GTK title bar settings",
            "properties": {
                "gtkTitleBar.mode": {
                    "type": "string",
                    "enum": [
                        "auto",
                        "light",
                        "dark"
                    ],
                    "default": "auto",
                    "description": "Specifies the theme for the GTK title bar."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "lumo build.cljs",
        "watch": "nodemon build.cljs",
        "test": "lumo -c lib -c src src/test/main.cljs"
    },
    "devDependencies": {
        "lumo-cljs": "1.8.0-beta",
        "nodemon": "^1.12.1",
        "vscode": "^1.1.5"
    },
    "nodemonConfig": {
        "ignore": [
            "out"
        ],
        "ext": "cljs",
        "execMap": {
            "cljs": "lumo"
        }
    }
}
