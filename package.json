{
    "name": "gtk-dark-titlebar",
    "version": "1.0.0",
    "publisher": "fkrull",
    "license": "BSD-2-Clause",
    "engines": {
        "vscode": "^1.16.0"
    },
    "main": "./out/src/extension",
    "activationEvents": [
        "*"
    ],
    "contributes": {
        "configuration": {
            "title": "GTK title bar settings",
            "properties": {
                "gtkTitleBar.mode": {
                    "type": "string",
                    "enum": [
                        "auto",
                        "light",
                        "dark"
                    ],
                    "default": "auto",
                    "description": "Specifies the theme for the GTK title bar."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "mocha": "^3.5.0",
        "tslint": "^5.7.0",
        "typescript": "^2.5.2",
        "vscode": "^1.1.5"
    }
}
